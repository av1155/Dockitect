{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"],
            "env": ["CI", "NODE_ENV"]
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "env": ["CI", "NODE_ENV"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
